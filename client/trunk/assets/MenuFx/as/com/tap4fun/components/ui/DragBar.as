class com.tap4fun.components.ui.DragBar extends com.tap4fun.components.ComponentBase
{
	static var symbolName:String = "DragBar";
	static var symbolOwner:Object = DragBar;
	var className:String = "DragBar";
	//////////////////////////////////////////////////////////////////////////////////////////////////
	//										Private Properties										//
	//////////////////////////////////////////////////////////////////////////////////////////////////
	
	
	//////////////////////////////////////////////////////////////////////////////////////////////////
	//											Constructor											//
	//////////////////////////////////////////////////////////////////////////////////////////////////
	function DragBar()
	{
		this.applyHandlers();
	}
	
	//////////////////////////////////////////////////////////////////////////////////////////////////
	//											Private Methods										//
	//////////////////////////////////////////////////////////////////////////////////////////////////
	private function applyHandlers():Void
	{
		this.onPress = function():Void
		{
			this._parent.swapDepths(this._parent.getNextHighestDepth());
			this._parent.startDrag(false);
			if(this.onEnterDrag) this.onEnterDrag();
		};
		this.onRelease = this.onReleaseOutside = function():Void
		{
			this._parent.stopDrag();
			if(this.onQuitDrag) this.onQuitDrag();
		};
	}
	//////////////////////////////////////////////////////////////////////////////////////////////////
	//											Public Methods										//
	//////////////////////////////////////////////////////////////////////////////////////////////////
	
	
	//////////////////////////////////////////////////////////////////////////////////////////////////
	//										Getters and Setters										//
	//////////////////////////////////////////////////////////////////////////////////////////////////
	
	//////////////////////////////////////////////////////////////////////////////////////////////////
	//												Events											//
	//////////////////////////////////////////////////////////////////////////////////////////////////
}
